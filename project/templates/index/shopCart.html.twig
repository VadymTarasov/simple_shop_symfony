{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<main>
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {% set sum = 0 %}
    {% for item in items %}
        <div class="col">
                <div class="card shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                    <div class="card-body">
                        <p class="card-text">{{ item.shopItem.title}}</p>
                        <p class="card-text">{{ item.shopItem.price}} $</p>
                        {% set sum = sum + item.shopItem.price %}
                        <p class="card-text">{{ item.shopItem.description}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                        </div>
                    </div>
                </div>
        </div>
    {% endfor %}
        </div>
        <br>
        <h4>Итого: {{ sum }}</h4>
        <br>
        <a href="{{ path('shop_order') }}" class="float-right btn btn-success mt-2">Оформить заказ</a>
        <br>

    </div>

</main>


{% endblock %}
