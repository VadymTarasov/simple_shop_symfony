{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Список заказов ✅</h1>
    <ul class="nav">
        <li class="nav-item">  <a class="nav-link" href="/shop/list/fruit">фрукты</a>  </li>
        <li class="nav-item">  <a class="nav-link" href="/shop/list/vegetables">овощи</a>  </li>
         </ul>
    <main>

        {% for order in orders %}

            <td><br>заказ № <b>{{ order.id }}</b> имя покупателя <b>{{ order.userName }}</b><br></td>

                {% for carts in cart %}
                {% if order.sessionId == carts.sessionId %}

                <td><br>продукт - {{ carts.shopItem.title}} <br></td>

            {% endif %}
                {% endfor %}
            <a href="/shop/order/delete/{{ order.id }}" type="button" class="btn btn-outline-primary">удолить заказ</a>

        {% endfor %}

    </main>


</div>


{% endblock %}
